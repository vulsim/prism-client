<mui:ModernWindow x:Class="Prism.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mui="http://firstfloorsoftware.com/ModernUI"
  xmlns:res="clr-namespace:Prism.Properties"
  Title="Prism" IsTitleVisible="False" 
  Height="525" Width="720"
  ContentSource="/Views/ExploreRootView.xaml"
  Loaded="ModernWindow_Loaded"
  Closing="ModernWindow_Closing">
    <mui:ModernWindow.TitleLinks>
        <mui:Link DisplayName="{x:Static res:Resources.APP_MAINWINDOW_TITLE_ABOUT}" Source="/Views/AboutView.xaml" />        
    </mui:ModernWindow.TitleLinks>
    <mui:ModernWindow.MenuLinkGroups>
        <mui:LinkGroup DisplayName="{x:Static res:Resources.APP_MAINWINDOW_TITLE_EXPLORE}">
            <mui:LinkGroup.Links>
                <mui:Link Source="/Views/ExploreRootView.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
        <mui:LinkGroup DisplayName="{x:Static res:Resources.APP_MAINWINDOW_TITLE_OPERATION}">
            <mui:LinkGroup.Links>
                <mui:Link Source="/Views/OperationRootView.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
        <mui:LinkGroup DisplayName="{x:Static res:Resources.APP_MAINWINDOW_TITLE_JOURNAL}">
            <mui:LinkGroup.Links>
                <mui:Link Source="/Views/JournalRootView.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
    </mui:ModernWindow.MenuLinkGroups>
</mui:ModernWindow>